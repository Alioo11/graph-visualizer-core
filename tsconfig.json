{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "rootDir": "./",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "declaration": true,
    "paths": {
      "@models/*": ["./src/models/*"],
      "@scss/*": ["./src/scss/*"],
      "@types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "files": ["src/index.js"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist", "build"]
}
