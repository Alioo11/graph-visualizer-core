{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "./dist/",
    "target": "ES2017",
    "rootDir": "./src",
    "declarationDir": "./dist/types",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "types": ["./src/types"],
    "strict": true,
    "paths": {
      "@models/*": ["./src/models/*"],
      "@scss/*": ["./src/scss/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
